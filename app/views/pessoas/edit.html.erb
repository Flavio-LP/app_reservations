<div class="container">
  <h2>Complete seus dados pessoais</h2>
  
  <%= form_with model: @pessoa, url: pessoa_path, local: true do |form| %>
    <% if @pessoa.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @pessoa.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= form.label :nome %>
      <%= form.text_field :nome, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :sobrenome %>
      <%= form.text_field :sobrenome, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :telefone %>
      <%= form.text_field :telefone, class: 'form-control', placeholder: '(XX) XXXXX-XXXX', required: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :cpf %>
      <%= form.text_field :cpf, class: 'form-control', placeholder: 'XXX.XXX.XXX-XX', required: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :data_nascimento %>
      <%= form.date_field :data_nascimento, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :endereco %>
      <%= form.text_area :endereco, class: 'form-control', rows: 3, required: true %>
    </div>
    
    <div class="form-group">
      <%= form.submit 'Salvar dados', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>