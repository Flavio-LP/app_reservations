<h2>Forgot your password?</h2>

<%= form_tag custom_password_reset_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= email_field_tag :email, nil, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= submit_tag "Update password to: abc123654" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
